<Window x:Class="ModThree.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModThree.Views"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" MinHeight="720" MinWidth="1240" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Текущий пароль" FontSize="24"/>
            <TextBox Name="currentPasswordBox" FontSize="16" Height="30" Width="Auto" Margin="5"/>
            <TextBlock Text="Новый пароль" FontSize="24"/>
            <PasswordBox Name="newPasswordBox" FontSize="16" Height="30" Width="Auto" Margin="5"/>
            <TextBlock Text="Повторить пароль" FontSize="24"/>
            <PasswordBox Name="confirmPasswordBox" FontSize="16" Height="30" Width="Auto" Margin="5"/>
            <Button Content="Сменить пароль" FontSize="16" Margin="5,25" Click="ChangePasswordButton_Click"/>
        </StackPanel>
    </Grid>
</Window>